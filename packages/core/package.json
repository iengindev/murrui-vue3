{
  "name": "@murrui/core",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/murrui.umd.js",
  "module": "./dist/murrui.es.js",
  "types": "./dist/shared/ui/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "build": "npm run type-check && npm run build:only && npm run build:types",
    "build:only": "vite build --",
    "build:types": "vue-tsc -p tsconfig.build.json --emitDeclarationOnly",
    "type-check": "vue-tsc --build",
    "prepack": "npm run build"
  },
  "exports": {
    ".": {
      "import": "./dist/murrui.es.js",
      "types": "./dist/shared/ui/index.d.ts"
    },
    "./style.css": "./dist/core.css"
  },
  "peerDependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/tsconfig": "^0.8.1",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vue-tsc": "^3.1.0"
  }
}
