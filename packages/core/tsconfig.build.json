{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler", 

    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "isolatedModules": true,
    "noEmitOnError": false,

    "jsx": "preserve",
    "jsxImportSource": "vue",

    "types": ["vue"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
